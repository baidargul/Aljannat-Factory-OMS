generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://baidargul:iamacracker@localhost:5432/exceltodb"
}

model orders {
  id            String     @id @unique
  dateOfBooking DateTime   @default(now()) @db.Timestamptz(6)
  status        String
  note          String?
  confirmedBy   String?
  product       String
  variant       String
  weight        String
  amount        Int
  courier       String
  trackingNo    String
  customerId    String
  customers     customers? @relation(fields: [customerId], references: [id])
}

model customers {
  id        String   @id @unique @default(uuid())
  name      String
  email     String
  phone     String
  address   String
  city      String
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @db.Timestamptz(6)
  orders    orders[]
}

model sheets {
  id        String   @id @unique @default(uuid())
  name      String
  url       String
  content   String
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @db.Timestamptz(6)
}
